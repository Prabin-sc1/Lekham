<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UpdateProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update profile"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"/>
    <EditText
        android:paddingStart="4dp"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:hint="Name"
        android:id="@+id/et_name_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profession"
        android:textSize="15sp"/>
    <EditText
        android:paddingStart="4dp"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:hint="Profession"
        android:id="@+id/et_profession_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="15sp"/>
    <EditText
        android:paddingStart="4dp"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:hint="Don't think too much, just write about yourself!"
        android:inputType="textMultiLine"
        android:id="@+id/et_bio_up"
        android:layout_margin="4dp"
        android:gravity="start"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_up"
        android:background="@drawable/save_update_profile"
        android:textColor="@color/background"
        android:text="Save profile"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />


</LinearLayout>