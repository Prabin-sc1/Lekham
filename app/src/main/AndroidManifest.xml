<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lekham.blog.app.np"
    >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lekham">
        <activity
            android:name=".Activity.AddPostActivity"
            android:label="@string/post_blog" />
        <activity android:name=".Activity.UpdateProfileActivity"></activity>
        <activity android:name=".Activity.AllFragmentActivity"></activity>

        <activity android:name=".Activity.ForgotActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.CreateProfileActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>